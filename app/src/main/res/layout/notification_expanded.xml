<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    android:backgroundTint="#E6000000"
    android:background="@drawable/dialog_corners">

    <androidx.cardview.widget.CardView
        android:id="@+id/notificationArtHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="0dp">

        <ImageView
            android:id="@+id/notificationArt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitXY"
            android:src="@drawable/noalbumart"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/notificationDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/notificationArtHolder"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/notificationSong"
            style="@style/TextAppearance.Compat.Notification.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="Song Name"/>

        <TextView
            android:id="@+id/notificationArtistAlbum"
            style="@style/TextAppearance.Compat.Notification.Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="Artist - Album"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/notificationSeekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/notificationDetails"
        android:layout_centerInParent="true">

        <SeekBar
            android:id="@+id/notificationCurrentSeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumbTint="@color/white"/>

        <TextView
            android:id="@+id/notificationCurrentPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notificationCurrentSeek"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:text="0:00"/>

        <TextView
            android:id="@+id/notificationCurrentDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notificationCurrentSeek"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:text="0:00"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/audioControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/notificationSeekbar"
        android:layout_centerInParent="true">

        <ImageButton
            android:id="@+id/notificationBack"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="30dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/ic_fast_rewind"/>

        <ImageButton
            android:id="@+id/notificationPlay"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/ic_play"/>

        <ImageButton
            android:id="@+id/notificationForward"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/ic_fast_forward"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/volumeControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@id/audioControls">

        <ImageView
            android:id="@+id/volumeDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/white"
            android:src="@drawable/ic_volume_mute"
            android:layout_alignParentStart="true"/>

        <SeekBar
            android:id="@+id/volumeControlSeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumbTint="@color/white"
            android:thumb="@drawable/seekbar_thumb"
            android:layout_toRightOf="@id/volumeDown"
            android:layout_toLeftOf="@id/volumeUp"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/volumeUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@color/white"
            android:src="@drawable/ic_volume_up"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

</RelativeLayout>